<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:WpfCustomControl.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/WpfCustomControl;component/Themes/Flyout.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style
        BasedOn="{StaticResource FlyoutStyle}"
        TargetType="{x:Type ctrls:Flyout}" />
</ResourceDictionary>